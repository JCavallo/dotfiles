# Manage gaps
mode "gaps" {
        # outer gaps
        bindsym h gaps outer current minus 10
        bindsym l gaps outer current plus 10

        # inner gaps
        bindsym j gaps inner current minus 10
        bindsym k gaps inner current plus 10

        # For mono panes
        bindsym g exec "i3-msg gaps top current set 30 && i3-msg gaps bottom current set 80 && i3-msg gaps left current set 200 && i3-msg gaps right current set 200 && i3-msg mode default"

        # For multi panes : default
        bindsym d exec "i3-msg gaps outer current set 0 && i3-msg gaps inner current set 30 && i3-msg gaps bottom current set 80 && i3-msg mode default"

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+g mode "gaps"

# gaps
gaps inner 30
gaps bottom 80

# 4K gaps
gaps inner 60
gaps top 90
gaps left 140
gaps right 140
gaps bottom 140

