[core]
    excludesfile = ~/.gitignore
    editor = nvim
    pager = delta
[color]
    ui = true
[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22
[color "diff"]
    meta = yellow
    frag = magenta bold
    commit = yellow bold
    old = red bold
    new = green bold
    whitespace = red reverse
[delta]
    features = side-by-side line-numbers decorations hoopoe
    navigate = true
    commit-decoration-style = bold yellow box
    file-style = bold blue
    file-decoration-style = bold blue ul
    hunk-header-style = line-number syntax italic
[interactive]
    diffFilter = delta --color-only
; [pager]
;     diff = diff-so-fancy | less --tabs=1,5 -RFX
;     show = diff-so-fancy | less --tabs=1,5 -RFX
[upload]
    fork = mine
[pull]
    ff = only
[push]
    default = current
[merge]
    tool = vimdiff
[mergetool]
    prompt = true
[mergetool "vimdiff"]
    cmd = nvim -d $MERGED $LOCAL $BASE $REMOTE -c '$wincmd L' -c 'wincmd J'
[difftool]
    prompt = false
[rerere]
    enabled = true
[diff]
    tool = vimdiff
[diff "postman"]
    textconv=jq \"(.item[].item[].request.body?.raw | select (.)) |= (. | select ((. | length) > 0) | fromjson)\"
    cachetextconv = true
[alias]
    l = log --color --graph --full-history --all --pretty=format:'%Cred%h%Creset -%C(cyan)%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset%n' --abbrev-commit --date iso
    ll = log --color --graph --full-history --pretty=format:'%Cred%h%Creset -%C(cyan)%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset%n' --abbrev-commit --date iso
    fd = fuzzy diff
    fst = fuzzy status
    fpr = fuzzy pr
    co = checkout
    cp = cherry-pick --strategy=recursive -X no-renames
    st = status -sb
    mt = mergetool
    unstage = reset -q HEAD --
    discard = checkout --
    nvm = !git reset --hard HEAD && git clean -d -f
    uncommit = reset --mixed HEAD~
    save = commit -m
    resave = commit --amend
    invert = revert
    last = log -1 HEAD --format=format:"%Cred%H"
    cleartags = !git tag -l | xargs git tag -d && git fetch -t
    summary = status -u -s
    branchout = checkout -b
    branches = branch -a -vv
    br = branch -vv
    tags = tag
    stashes = stash list
    stashall = stash --include-untracked
    prestage = diff
    precommit = diff --cached
    move = mv
    remove = rm
    unmerged = branch --no-merged
    unstash = stash pop
    what = show -w
    untrack = rm -r --cached
    rewrite = rebase -i
    amend = commit --amend
    back = checkout "-"
    contributors = shortlog -s -n
    filetrail = git log --follow -p -w
    mergetrail = log --ancestry-path --merges
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[commit]
    gpgsign = true
[uploadpack]
	allowFilter = true
[include]
    path = ~/.config/delta-themes.gitconfig
